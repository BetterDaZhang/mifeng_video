<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="#f1f1f1">

    <include
        android:id="@+id/lepay_actionbar"
        layout="@layout/lepay_actionbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_bootom"
        android:layout_below="@+id/lepay_actionbar"
        android:background="#f0f0f0"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/lepay_abroad_header" />

                <LinearLayout
                    android:id="@+id/ll_types"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

                <include
                    android:id="@+id/in_footer"
                    layout="@layout/lepay_abroad_footer" />

                <RelativeLayout
                    android:id="@+id/rl_tax"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12.5dp"
                    android:gravity="top"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_tax"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="18dp"
                        android:textColor="#888888" />

                    <TextView
                        android:id="@+id/tv_tax2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_tax"
                        android:layout_marginTop="3dp"
                        android:paddingLeft="18dp"
                        android:textColor="#888888" />

                    <ImageView
                        android:id="@+id/iv_pci"
                        android:layout_width="27dp"
                        android:layout_height="18dp"
                        android:layout_alignBottom="@+id/tv_tax2"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@+id/tv_tax2"
                        android:src="@drawable/icon_pci" />

                    <ImageView
                        android:id="@+id/iv_norton"
                        android:layout_width="27dp"
                        android:layout_height="18dp"
                        android:layout_alignBottom="@+id/tv_tax2"
                        android:layout_marginLeft="3dp"
                        android:layout_toRightOf="@+id/iv_pci"
                        android:src="@drawable/icon_norton" />
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bootom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_tip_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="14dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_tip_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:textColor="#515151"
                android:textSize="13sp"
                tools:text="@string/lepay_fragment_hk_ordertotal_lable" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lepay_fragment_hk_unit"
                    android:textColor="#f05153"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_price_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#f05153"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_price_tax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lepay_abroad_withTax"
                    android:textColor="#999999"
                    android:textSize="15sp"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:id="@+id/fl_continue"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#f05557"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_continue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="17sp"
                tools:text="Continue" />

            <ProgressBar
                android:id="@+id/pb_progress"
                style="@android:style/Widget.ProgressBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:layout_marginRight="28dp"
                android:visibility="gone" />
        </FrameLayout>
    </LinearLayout>
</RelativeLayout>