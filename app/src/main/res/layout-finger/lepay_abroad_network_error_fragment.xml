<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/lepay_page_layout_bg_color"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_duanwang"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:scaleType="fitXY"
        android:src="@drawable/duanwang" />

    <TextView
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_below="@+id/iv_duanwang"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        tools:text="Network disconnected!"
        android:textColor="#575757"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tv_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:gravity="center_horizontal"
        tools:text="Please check your network connection\nand try again"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_retry"
        android:layout_width="160dp"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="160dp"
        android:background="@drawable/lepay_bg_green"
        tools:text="Retry"
        android:textColor="@android:color/white"
        android:textSize="16sp" />
</RelativeLayout>