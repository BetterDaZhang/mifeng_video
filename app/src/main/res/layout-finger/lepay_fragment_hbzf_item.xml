<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="106dp"
    android:layout_centerVertical="true"
    android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:id="@+id/lepay_hbfq_rl_count"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:background="@drawable/lepay_circle_green"
        android:gravity="center"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/lepay_hbfq_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:textColor="#008cd5"
            android:textSize="24sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/lepay_hbfq_count"
            android:layout_toRightOf="@+id/lepay_hbfq_count"
            android:text="@string/lepay_fragment_hbzf_item_qi"
            android:textColor="#555555"
            android:textSize="11sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/lepay_hbfq_rl_count"
        android:gravity="center|left"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lepay_tv_hbfq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lepay_fragment_hbzf_item_fenqi"
                android:textColor="#555555"
                android:textSize="@dimen/lepay_et_cardinfo_font_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12.5dp"
                android:layout_toRightOf="@id/lepay_tv_hbfq"
                android:text="@string/lepay_all_currency"
                android:textColor="@color/c555555"
                android:textSize="@dimen/lepay_et_cardinfo_font_size" />

            <TextView
                android:id="@+id/lepay_tv_hbfq_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/lepay_tv_hbfq"
                android:text="@string/lepay_all_currency"
                android:textColor="@color/c008cd5"
                android:textSize="@dimen/lepay_et_cardinfo_font_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/lepay_tv_hbfq"
                android:text="@string/lepay_fragment_hbzf_item_x"
                android:textColor="@color/c555555"
                android:textSize="@dimen/lepay_et_cardinfo_font_size" />

            <TextView
                android:id="@+id/lepay_tv_hbfq_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/lepay_tv_hbfq"
                android:textColor="@color/c555555"
                android:textSize="@dimen/lepay_et_cardinfo_font_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lepay_tv_hbfq_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#555555"
                android:textSize="@dimen/lepay_cashier_trade_desc" />

            <TextView
                android:id="@+id/tv_tip_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:background="@drawable/lepay_bg_green"
                android:paddingBottom="2dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="2dp"
                android:textColor="@android:color/white"
                android:textSize="13sp"
                android:textStyle="normal" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <TextView
            android:id="@+id/lepay_tv_hbfq_decription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textColor="#bbbbbb"
            android:textSize="@dimen/lepay_cashier_trade_desc" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/lepay_cb_hbfq"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="19dp"
        android:background="@drawable/lepay_checkbox_unchecked"
        android:button="@null"
        android:clickable="false"
        android:saveEnabled="false" />

    <TextView
        android:id="@+id/lepay_cb_line"
        android:layout_width="fill_parent"
        android:layout_height="0.8dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/lepay_layout_line" />"
</RelativeLayout>
