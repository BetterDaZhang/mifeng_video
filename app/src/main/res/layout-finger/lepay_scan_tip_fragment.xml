<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <View
        android:id="@+id/view_line1"
        android:layout_width="fill_parent"
        android:layout_height="0.8dp"
        android:background="@color/lepay_actionbar_bg_color" />

    <ImageView
        android:id="@+id/iv_logo_fastpay"
        android:layout_width="match_parent"
        android:scaleType="fitStart"
        android:layout_height="25dp"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="16dp"
        tools:src="@drawable/quickpay" />

    <View
        android:id="@+id/view_line2"
        android:layout_width="fill_parent"
        android:layout_height="0.8dp"
        android:background="@color/lepay_actionbar_bg_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_card"
            android:layout_width="162dp"
            android:layout_height="116dp"
            android:scaleType="fitXY"
            tools:src="@drawable/scan_card" />

        <TextView
            android:id="@+id/tv_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="43dp"
            android:drawablePadding="8dp"
            android:textColor="#e54646"
            android:textSize="17sp"
            tools:drawableLeft="@drawable/icon_scan"
            tools:text="@string/lepay_add_card" />

        <TextView
            android:id="@+id/tv_camera_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal"
            android:lineSpacingExtra="11dp"
            android:textColor="#777777"
            android:textSize="14sp"
            tools:text="@string/lepay_add_card_tip" />

        <TextView
            android:id="@+id/tv_typein"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:padding="3dp"
            android:textColor="#0378ff"
            android:textSize="17sp"
            tools:text="@string/lepay_typein_byhand" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_scan"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#e54646"
        android:gravity="center"
        android:textSize="17sp"
        tools:text="@string/lepay_btn_scan" />
</LinearLayout>