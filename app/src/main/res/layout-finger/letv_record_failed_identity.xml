<?xml version="1.0" encoding="utf-8"?>
<!-- 审核失败 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="223dp"
    android:layout_height="135dp"
    android:background="#fff"
    android:gravity="center_horizontal"
    android:minWidth="@dimen/search_dialog_width"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/search_dialog_btn_marginleft"
        android:layout_marginRight="@dimen/search_dialog_btn_marginright"
        android:layout_marginTop="24dp"
        android:gravity="center_horizontal"
        android:singleLine="true"
        android:text="@string/letv_record_failed_identity_title"
        android:textColor="@color/code3"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/clear_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="23dp"
        android:paddingRight="23dp"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal"
        android:maxLines="2"
        android:textColor="@color/code4"
        android:textSize="11dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/search_dialog_btn_margintop"
        android:background="@color/code03"
        android:gravity="center"
        android:orientation="horizontal"
        android:text="@string/mine_dialog_cancel"
        android:textColor="@color/code4"
        android:textSize="13dp" >

        <TextView
            android:id="@+id/negativeButton"
            android:layout_width="0dp"
            android:layout_height="33dp"
            android:layout_weight="1"
            android:background="@color/code03"
            android:gravity="center"
            android:padding="10dip"
            android:text="@string/letv_record_cancel_identity"
            android:textColor="@color/code3"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/positiveButton"
            android:layout_width="0dp"
            android:layout_height="33dp"
            android:layout_weight="1"
            android:background="@color/code1"
            android:gravity="center"
            android:padding="10dip"
            android:text="@string/letv_record_recommit_identity"
            android:textColor="@color/code7"
            android:textSize="11dp" />
    </LinearLayout>

</LinearLayout>