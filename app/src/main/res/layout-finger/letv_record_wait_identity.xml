<?xml version="1.0" encoding="utf-8"?>
<!-- 身份验证等待审核 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="223dp"
    android:layout_height="135dp"
    android:background="@color/code010"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/clear_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:paddingLeft="@dimen/search_dialog_btn_marginleft"
        android:paddingRight="@dimen/search_dialog_btn_marginright"
        android:gravity="center"
        android:text="@string/letv_record_wait_identity"
        android:maxLines="2"
        android:textColor="@color/code4"
        android:textSize="11dp" />

    <TextView
        android:id="@+id/cancel"
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:background="@color/code06"
        android:gravity="center"
        android:text="@string/mine_dialog_cancel"
        android:textColor="@color/code3"
        android:textSize="11dp" >
    </TextView>

</LinearLayout>