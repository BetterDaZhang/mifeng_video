<?xml version="1.0" encoding="utf-8"?>

<!-- 影片试看结束后，开通会员的页面。会员或单片 -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/play_to_getvip_bg" >

    <Button
        android:id="@+id/control_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/play_back" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                style="@style/NoticeAfterTryandseeWhite"
                android:text="@string/play_end_tryandsee_notice"
                android:visibility="visible" >
            </TextView>
        </FrameLayout>

        <TextView
            android:id="@+id/tv_get_vip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:background="@drawable/play_getvip"
            android:gravity="left|center_vertical"
            android:paddingLeft="40dp"
            android:text="@string/mine_getvip"
            android:textColor="@android:color/white"
            android:textSize="10dp" >
        </TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_pay"
                style="@style/NoticeAfterTryandseeOrange" >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_vip_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_tryandsee_notice"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            android:orientation="horizontal" >

            <TextView
                style="@style/NoticeAfterTryandseeWhite"
                android:text="@string/play_payed_or_vip" />

            <TextView
                android:id="@+id/tv_login"
                style="@style/NoticeAfterTryandseeOrange"
                android:text="@string/play_login_rightnow" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>