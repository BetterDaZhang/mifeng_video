<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/live_createbg"
    android:orientation="vertical" >

    <Button
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="18dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/live_create_close" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp" >

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:visibility="invisible" />

        <com.letv.autoapk.ui.mobilelive.view.MobileLiveLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5" >

            <ImageView
                android:id="@+id/livecover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/live_coverbg" />
        </com.letv.autoapk.ui.mobilelive.view.MobileLiveLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:visibility="invisible" />
    </LinearLayout>

    <EditText
        android:id="@+id/edittitle"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="45dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:maxLength="10"
        android:singleLine="true"
        android:textColor="#dddddd"
        android:textSize="17dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="33dp"
        android:background="#dddddd" />

    <Button
        android:id="@+id/start"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="26dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/live_startlive"
        android:text="@string/livestart"
        android:textColor="@color/live_ok_bg"
        android:textSize="15dp" />

</LinearLayout>