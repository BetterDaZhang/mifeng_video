<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/code09"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_marginTop="35dp"
        android:background="@color/code01"
        android:gravity="center_vertical"
        android:paddingLeft="10dip" >

        <EditText
            android:id="@+id/et_password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:hint="@string/mine_password_hint"
            android:inputType="textPassword"
            android:textColor="@color/code4"
            android:textColorHint="@color/code03"
            android:textSize="13dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/resetpwd_complete"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/mine_login_btn"
        android:gravity="center"
        android:text="@string/ok"
        android:textColor="@color/code7"
        android:textSize="17dp" />

</LinearLayout>