<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/rl_hot_words_index"
        android:layout_width="@dimen/search_hot_index_height_width"
        android:layout_height="@dimen/search_hot_index_height_width"
        android:layout_centerVertical="true" >

        <ImageView
            android:id="@+id/iv_hot_words_index"
            android:layout_width="@dimen/search_hot_index_height_width"
            android:layout_height="@dimen/search_hot_index_height_width"
            android:background="@drawable/search_hot_one" >
        </ImageView>

        <TextView
            android:id="@+id/tv_hot_words_index"
            android:layout_width="@dimen/search_hot_index_height_width"
            android:layout_height="@dimen/search_hot_index_height_width"
            android:gravity="center"
            android:text="1"
            android:textSize="@dimen/search_hot_index_textsize" >
        </TextView>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_hot_keyword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/rl_hot_words_index"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/search_hot_keyword_padding_top_bottom"
        android:paddingLeft="@dimen/search_hot_keyword_padding_left"
        android:paddingTop="@dimen/search_hot_keyword_padding_top_bottom"
        android:textColor="@color/code3"
        android:textSize="@dimen/search_hot_keyword_textsize" >
    </TextView>

</RelativeLayout>