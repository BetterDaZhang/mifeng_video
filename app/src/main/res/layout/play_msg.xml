<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@android:color/transparent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical" >
        <com.letv.autoapk.ui.player.view.ProgressWheel
            android:id="@+id/progress_wheel"
            android:layout_width="@dimen/play_msg_progress"
            android:layout_height="@dimen/play_msg_progress"
            wheel:matProg_barColor="@color/code02"
            wheel:matProg_fillRadius="true"
            wheel:matProg_progressIndeterminate="true" />

        <TextView
            android:id="@+id/play_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dip"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/play_msg_textsize" />

        <TextView
            android:id="@+id/play_retry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/click_to_retry"
            android:visibility="gone"
            android:textColor="@color/code1"
            android:textSize="@dimen/play_msg_textsize" />
    </LinearLayout>

</FrameLayout>