<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:layout_height="wrap_content" >

    <com.summerxia.dateselector.widget.DateSelectorWheelView
        android:id="@+id/date_time_wheelView"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </com.summerxia.dateselector.widget.DateSelectorWheelView>

    <LinearLayout
        android:layout_marginTop="5dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dialog_cancel"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/code03"
            android:gravity="center"
            android:textColor="@color/code4"
            android:textSize="13dp"
            android:padding="10dip"
            android:text="@string/cancel" />
        <TextView
            android:id="@+id/dialog_ok"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/code04"
            android:gravity="center"
            android:padding="10dip"
            android:textColor="@color/code6"
            android:textSize="13dp"
            android:text="@string/ensure" />
    </LinearLayout>

</LinearLayout>