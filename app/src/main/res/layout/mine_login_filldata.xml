<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/code09"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <View
                android:id="@+id/view_above_shadow"
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:background="@color/code01" />

            <RelativeLayout
                android:id="@+id/rl_empty_shadow"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/view_above_shadow" >

                <com.letv.autoapk.widgets.CircleImageView2
                    android:id="@+id/civ_headpic"
                    android:layout_width="59dp"
                    android:layout_height="59dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="33dp"
                    android:src="@drawable/mine_morentouxiang" />

                <TextView
                    android:id="@+id/tv_set_headpic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/civ_headpic"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:text="@string/click_to_upload_headimage"
                    android:textColor="@color/code4"
                    android:textSize="13dp" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="33dp"
                    android:layout_below="@id/tv_set_headpic" />
            </RelativeLayout>

            <View
                android:id="@+id/view_below_shadow"
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_below="@id/rl_empty_shadow"
                android:background="@color/code01" />

            <RelativeLayout
                android:id="@+id/rl_personal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view_below_shadow"
                android:background="@color/code01"
                android:paddingLeft="15dp" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1px"
                        android:background="@color/code03" />

                    <RelativeLayout
                        android:id="@+id/rl_name"
                        android:layout_width="fill_parent"
                        android:layout_height="42dip" >

                        <TextView
                            android:id="@+id/tv_account"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/nickname"
                            android:textColor="@color/code3"
                            android:textSize="14dp" />

                        <EditText
                            android:id="@+id/et_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:layout_toRightOf="@id/tv_account"
                            android:background="@null"
                            android:textColor="@color/code4"
                            android:textSize="14dp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1px"
                        android:background="@color/code03" />

                    <RelativeLayout
                        android:id="@+id/rl_sex"
                        android:layout_width="fill_parent"
                        android:layout_height="42dip" >

                        <TextView
                            android:id="@+id/tv_sex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/sex"
                            android:textColor="@color/code3"
                            android:textSize="14dp" />

                        <ImageView
                            android:id="@+id/iv_sex_arrow_right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="17dp" />

                        <TextView
                            android:id="@+id/tv_select_sex"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:layout_toRightOf="@id/tv_sex"
                            android:textColor="@color/code4"
                            android:textSize="14dp" />
                    </RelativeLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1px"
                        android:background="@color/code03" />

                    <RelativeLayout
                        android:id="@+id/rl_birthday"
                        android:layout_width="fill_parent"
                        android:layout_height="42dip" >

                        <TextView
                            android:id="@+id/tv_birthday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="@string/birthday"
                            android:textColor="@color/code3"
                            android:textSize="14dp" />

                        <ImageView
                            android:id="@+id/iv_birth_arrow_right"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="17dp" />

                        <TextView
                            android:id="@+id/tv_select_birthday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:layout_toRightOf="@id/tv_birthday"
                            android:textColor="@color/code4"
                            android:textSize="14dp" />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <View
                android:id="@+id/cut_off_rule"
                android:layout_width="fill_parent"
                android:layout_height="1px"
                android:layout_below="@id/rl_personal"
                android:background="@color/code03" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/cut_off_rule" >

                <FrameLayout
                    android:id="@+id/fl_next"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="38dp"
                    android:background="@android:color/transparent" >

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/mine_login_btn" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/ok"
                        android:textColor="@color/code6"
                        android:textSize="16dp" />
                </FrameLayout>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</LinearLayout>