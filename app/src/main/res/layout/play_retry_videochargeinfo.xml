<?xml version="1.0" encoding="utf-8"?>

<!-- if there is no information request to the cinema after the film end,pls try again -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/play_to_getvip_bg" >

    <Button
        android:id="@+id/control_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/play_back" />

    <TextView
        android:id="@+id/play_retry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/click_to_get_videoinfo"
        android:textColor="@color/code1"
        android:textSize="@dimen/play_msg_textsize" />

</RelativeLayout>