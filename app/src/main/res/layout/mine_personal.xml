<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/code09"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/ll_headpic"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/code02" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content" >

            <com.letv.autoapk.widgets.CircleImageView2
                android:id="@+id/civ_headpic"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="19dip"
                android:src="@drawable/mine_default_head_img" >
            </com.letv.autoapk.widgets.CircleImageView2>
        </FrameLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="12dip"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/ctv_headpic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/mine_change_headimg"
                android:textColor="@color/code6"
                android:textSize="15dp" />

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_get_vip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:background="@drawable/mine_getvip"
                android:text="@string/mine_getvip"
                android:textColor="@android:color/white"
                android:textSize="11dp"
                android:gravity="center" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_mine_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="11dp"
            android:src="@drawable/mine_arrow_white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_vip_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    </LinearLayout>
    
    <View
        android:layout_width="fill_parent"
        android:layout_height="25dip"
        android:background="@color/code09" />


    <LinearLayout
        android:id="@+id/ll_pay_record"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="@color/code01"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dip"
            android:text="@string/mine_consume_record"
            android:textColor="@color/code3"
            android:textSize="14dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="12dip"
            android:background="@null"
            android:drawableRight="@drawable/mine_arrow_right"
            android:singleLine="true"
            android:textColor="@color/code4"
            android:textSize="14dp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginTop="-1dp"
        android:layout_marginLeft="20dip"
        android:background="@color/code03" />

    <LinearLayout
        android:id="@+id/ll_name"
        android:layout_width="match_parent"
        android:layout_height="43dip"
        android:background="@color/code01"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dip"
            android:text="@string/mine_nickname_with_colon"
            android:textColor="@color/code3"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="12dip"
            android:background="@null"
            android:drawableRight="@drawable/mine_arrow_right"
            android:singleLine="true"
            android:textColor="@color/code4"
            android:textSize="13dp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="-1dp"
        android:background="@color/code03" />

    <LinearLayout
        android:id="@+id/ll_sex"
        android:layout_width="match_parent"
        android:layout_height="43dip"
        android:background="@color/code01"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dip"
            android:text="@string/mine_sex_with_colon"
            android:textColor="@color/code3"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv_sex"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="12dip"
            android:layout_weight="1"
            android:drawableRight="@drawable/mine_arrow_right"
            android:textColor="@color/code4"
            android:textSize="13dp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginLeft="20dip"
        android:layout_marginTop="-1dp"
        android:background="@color/code03" />

    <LinearLayout
        android:id="@+id/ll_birthday"
        android:layout_width="match_parent"
        android:layout_height="43dip"
        android:background="@color/code01"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dip"
            android:text="@string/birthday_with_colon"
            android:textColor="@color/code3"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv_birthday"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="12dip"
            android:layout_weight="1"
            android:drawableRight="@drawable/mine_arrow_right"
            android:textColor="@color/code4"
            android:textSize="13dp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="25dip"
        android:background="@color/code09" />

    <LinearLayout
        android:id="@+id/ll_changepassword"
        android:layout_width="match_parent"
        android:layout_height="43dip"
        android:background="@color/code01"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_changepassword"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dip"
            android:layout_marginRight="12dip"
            android:layout_weight="1"
            android:drawableRight="@drawable/mine_arrow_right"
            android:text="@string/mine_change_password"
            android:textColor="@color/code3"
            android:textSize="14dp" />
    </LinearLayout>

</LinearLayout>