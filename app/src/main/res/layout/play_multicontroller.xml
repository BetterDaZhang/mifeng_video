<com.letv.autoapk.ui.player.view.MultiContainer xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="102dip" >

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="102dip"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/multi_content"
            android:layout_width="wrap_content"
            android:layout_height="102dip"
            android:layout_marginLeft="50dip"
            android:layout_marginRight="10dip"
            android:orientation="horizontal"
            android:visibility="gone" >
        </LinearLayout>
    </HorizontalScrollView>

    <Button
        android:id="@+id/multi_control"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="20dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@drawable/play_openmulti" />

</com.letv.autoapk.ui.player.view.MultiContainer>