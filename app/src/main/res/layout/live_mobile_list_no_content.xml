<?xml version="1.0" encoding="utf-8"?>
<!-- 移动直播，当前没有直播 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/code01" >
    
    <ImageView
        android:id="@+id/no_content_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="185dp"
        android:background="@drawable/letv_record_mobilelive_list_no_content" />

    <TextView
        android:id="@+id/no_content_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/no_content_img"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:text="@string/letv_record_mobilelive_no_content"
        android:textColor="@color/code3"
        android:textSize="17dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/no_content_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:text="@string/letv_record_mobilelive_no_content2"
        android:textColor="@color/code4"
        android:textSize="13dp" />

