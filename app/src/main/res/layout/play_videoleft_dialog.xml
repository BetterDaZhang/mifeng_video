<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/code07" >

        <TextView
            android:layout_width="240dp"
            android:layout_height="100dp"
            android:padding="10dip"
            android:gravity="center"
            android:text="@string/play_videoleft_dialog_title"
            android:textColor="@color/code4" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/dialog_ok"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/code1"
            android:gravity="center"
            android:padding="10dip"
            android:text="@string/mine_dialog_ensure"
            android:textColor="@color/code7"
            android:textSize="13dp" />
    </LinearLayout>

    

</LinearLayout>