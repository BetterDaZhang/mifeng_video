<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/code01"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/play_head_ral"
        android:layout_width="match_parent"
        android:layout_height="@dimen/play_detail_head_height"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/play_detail_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13.7dp"
            android:drawableLeft="@drawable/discover_comment"
            android:drawablePadding="7.1dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="0"
            android:textColor="@color/code10"
            android:textSize="@dimen/play_detail_main_title" />

        <TextView
            android:id="@+id/play_detail_priseTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13.5dp"
            android:layout_toRightOf="@id/play_detail_comment_count"
            android:drawableLeft="@drawable/discover_zan_gray"
            android:drawablePadding="6.5dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="0"
            android:textColor="@color/code10"
            android:textSize="@dimen/play_detail_main_title" />

        <TextView
            android:id="@+id/play_detail_criticizeTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="13.5dp"
            android:layout_toRightOf="@id/play_detail_priseTv"
            android:drawableLeft="@drawable/discover_zan_gray"
            android:drawablePadding="6.5dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="0"
            android:textColor="@color/code10"
            android:textSize="@dimen/play_detail_main_title"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/play_detail_share"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="14.5dp"
            android:scaleType="centerInside"
            android:src="@drawable/play_share_icon" />

        <ImageView
            android:id="@+id/play_detail_download"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="34dp"
            android:layout_toLeftOf="@id/play_detail_share"
            android:scaleType="centerInside"
            android:src="@drawable/play_download_gray"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/play_detail_collect"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="34dp"
            android:layout_toLeftOf="@id/play_detail_download"
            android:focusable="true"
            android:scaleType="centerInside"
            android:src="@drawable/play_collect"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/code03" />

</LinearLayout>