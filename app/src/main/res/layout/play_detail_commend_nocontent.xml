<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/play_detail_comment_nocontent_height"
    android:background="@color/code01"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/play_detail_nocomment_height"
    android:paddingTop="@dimen/play_detail_nocomment_height" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/play_detail_nocomment_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@drawable/play_detail_nocomment" >
        </ImageView>

        <TextView
            android:id="@+id/play_detail_nocomment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/play_detail_nocomment"
            android:textColor="@color/code4" />
    </LinearLayout>

</LinearLayout>