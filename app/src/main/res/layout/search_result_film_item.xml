                    android:background="@drawable/discover_huancun"
                    android:gravity="center"
                    android:textColor="@color/code2"
                    android:textSize="13dp" />
            </RelativeLayout>            -->
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/arts_item_sort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/film_img_rl"
        android:orientation="vertical" >
    </LinearLayout>

</RelativeLayout>