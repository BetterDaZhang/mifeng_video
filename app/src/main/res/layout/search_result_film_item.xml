                    android:background="@drawable/search_result_play"
                    android:gravity="center"
                    android:text="@string/watch_rightnow"
                    android:textColor="@color/code7"
                    android:textSize="13dp" />

                
                     <TextView
                    android:id="@+id/download"
                    android:layout_width="66dp"
