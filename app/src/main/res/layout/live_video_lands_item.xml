<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/live_grid_paddingTop" >

    <com.letv.autoapk.widgets.NetImageView16_10
        android:id="@+id/live_video_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:borderRadius="2dp" />

    <TextView
        android:id="@+id/live_video_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/live_item_twolands_title_marginTop"
        android:layout_marginLeft="1dp"
        android:singleLine="true"
        android:textColor="@color/code3"
        android:textSize="@dimen/live_item_twolands_title" />

    <TextView
        android:id="@+id/live_video_brief"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="2dp"
        android:singleLine="true"
        android:textColor="@color/code4"
        android:textSize="@dimen/live_item_twolands_brief" />

</LinearLayout>