<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@color/code09"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dip"
        android:background="@color/code01"
        android:orientation="vertical"
        android:paddingLeft="19dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/mine_auto_jump"
                android:textColor="@color/code3"
                android:textSize="13dp" />

            <Switch
                android:id="@+id/sw_skip"
                style="@style/Switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dip" />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:background="@color/code03"
            android:visibility="gone" >
        </View>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/mine_allow_wifi_download"
                android:textColor="@color/code3"
                android:textSize="13dp" />

            <Switch
                android:id="@+id/sw_wificache"
                style="@style/Switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dip" />
        </LinearLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:background="@color/code03"
            android:visibility="gone" >
        </View>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="40dip"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/mine_receive_push_msg"
                android:textColor="@color/code3"
                android:textSize="13dp" />

            <Switch
                android:id="@+id/sw_push"
                style="@style/Switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dip" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_clearcache"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_marginTop="35dip"
        android:background="@color/code01"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="19dp" >

        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/mine_clear_msg"
            android:textColor="@color/code3"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv_cachesize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dip"
            android:text="0B"
            android:textColor="@color/code3"
            android:textSize="13dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_about"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_marginTop="35dip"
        android:background="@color/code01"
        android:drawableRight="@drawable/mine_arrow_right"
        android:gravity="center_vertical"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:text="@string/mine_about_us"
        android:textColor="@color/code3"
        android:textSize="13dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="1px"
        android:background="@color/code01" >

        <View
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:layout_marginLeft="19dp"
            android:background="@color/code03" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_feedback"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:background="@color/code01"
        android:drawableRight="@drawable/mine_arrow_right"
        android:gravity="center_vertical"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:text="@string/mine_feedback"
        android:textColor="@color/code3"
        android:textSize="13dp" />

    <TextView
        android:id="@+id/tv_logout"
        android:layout_width="fill_parent"
        android:layout_height="35dip"
        android:layout_marginLeft="19dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="35dip"
        android:background="@drawable/mine_login_btn"
        android:gravity="center"
        android:paddingLeft="15dip"
        android:paddingRight="15dip"
        android:text="@string/mine_logout"
        android:textColor="@color/code6"
        android:textSize="17dp" />

</LinearLayout>