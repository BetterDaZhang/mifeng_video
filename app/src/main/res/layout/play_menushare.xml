<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dip" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/play_share"
        android:textColor="@android:color/white"
        android:textSize="11dp" />

    <GridLayout
        android:id="@+id/rl_share_imgs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:columnCount="3"
        android:useDefaultMargins="true" >

        <ImageView
            android:id="@+id/menu_blog"
            android:layout_width="60dp"
            android:layout_height="@dimen/play_control_menushare_height"
            android:scaleType="centerInside"
            android:src="@drawable/mine_share_blog"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/menu_mm"
            android:layout_width="60dp"
            android:layout_height="@dimen/play_control_menushare_height"
            android:scaleType="centerInside"
            android:src="@drawable/mine_share_mm"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/menu_mmtimeline"
            android:layout_width="60dp"
            android:layout_height="@dimen/play_control_menushare_height"
            android:scaleType="centerInside"
            android:src="@drawable/mine_share_feedline"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/menu_qq"
            android:layout_width="60dp"
            android:layout_height="@dimen/play_control_menushare_height"
            android:scaleType="centerInside"
            android:src="@drawable/mine_share_qq"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/menu_qzone"
            android:layout_width="60dp"
            android:scaleType="centerInside"
            android:layout_height="@dimen/play_control_menushare_height"
            android:src="@drawable/mine_share_qqzone"
            android:visibility="gone" />
    </GridLayout>

</LinearLayout>