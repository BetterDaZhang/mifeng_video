<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:paddingBottom="@dimen/recommend_item_paddingbottom" >

    <com.letv.autoapk.widgets.NetImageView10_16
        android:id="@+id/video_filter_img"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY" 
        android:background="@drawable/default_img_16_10"/>

    <TextView
        android:id="@+id/video_filter_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/recommend_item_twolands_title_marginTop"
        android:singleLine="true"
        android:textColor="@color/code3"
        android:textSize="@dimen/recommend_item_twolands_title" />

</LinearLayout>