<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppTheme" parent="android:Theme.Light.NoTitleBar">
    </style>

    <style name="Switch" parent="android:Widget.CompoundButton">
        <item name="android:track">@drawable/mine_switch_bg</item>
        <item name="android:thumb">@drawable/mine_switch_btn</item>
        <item name="android:textOn">""</item>
        <item name="android:textOff">""</item>
        <item name="android:switchMinWidth">50dip</item>
        <item name="android:switchPadding">20dip</item>
    </style>

    <style name="StyledIndicators" parent="AppTheme">
        <item name="vpiTabPageIndicatorStyle">@style/CustomTabPageIndicator</item>
    </style>

    <style name="CustomTabPageIndicator">
        <item name="android:background">@drawable/boss_tab_indicator</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Medium</item>
        <item name="android:textColor">@color/boss_tabtext</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
        <item name="android:divider">@android:color/transparent</item>
    </style>

    <style name="ChannelPageIndicator" parent="AppTheme">
        <item name="vpiTabPageIndicatorStyle">@style/ChannelTabPageIndicator</item>
        <item name="vpiTabTextageIndicatorStyle">@style/ChannelTabTextPageIndicator</item>
    </style>

    <style name="Widget"></style>

    <style name="ChannelTabPageIndicator" parent="Widget">
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">16.7dip</item>
        <item name="android:paddingRight">16.7dip</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
    </style>

    <style name="ChannelTabTextPageIndicator" parent="Widget">
        <item name="android:background">@drawable/channel_tab_indicator</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textAppearance">@style/TextAppearance.ChannelTabPageIndicator</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextAppearance.ChannelTabPageIndicator" parent="Widget">
        <item name="android:textColor">@drawable/channel_font_indicator</item>
        <item name="android:textSize">16dp</item>
    </style>

    <!-- playdetailEpisode -->
    <style name="episodePageIndicator" parent="AppTheme">
        <item name="vpiTabPageIndicatorStyle">@style/EpisodeTabPageIndicator</item>
        <item name="vpiTabTextageIndicatorStyle">@style/EpisodeTabTextPageIndicator</item>
    </style>

    <style name="EpisodeTabPageIndicator" parent="Widget">
        <item name="android:paddingRight">28.3dip</item>
        <item name="android:paddingTop">17.5dp</item>
        <item name="android:paddingBottom">8.9dp</item>
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">8dp</item>
    </style>

    <style name="EpisodeTabTextPageIndicator" parent="Widget">
        <item name="android:background">@drawable/episode_tab_indicator</item>
        <item name="android:textAppearance">@style/TextAppearance.EpisodeTabPageIndicator</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextAppearance.EpisodeTabPageIndicator" parent="Widget">
        <item name="android:textColor">@drawable/episode_font_indicator</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="black_shadow_white16px">
        <item name="android:textColor">@color/code7</item>
        <item name="android:shadowColor">#99000000</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <style name="black_not_shadow_white16px">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/code7</item>
    </style>

    <style name="selectpic_btn_style">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_marginTop">20dip</item>
        <item name="android:layout_marginRight">15dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_width">fill_parent</item>
    </style>

    <style name="main_menu_animstyle">
        <item name="android:windowEnterAnimation">@anim/dialog_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_out</item>
    </style>

    <style name="Transparent" parent="android:Theme.Light">

        <!-- 将Activity的Theme设置成透明 -->
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!-- check box -->
    <style name="OfflineCheckBox" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:maxHeight">16.0px</item>
    </style>

    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="DateDialogStyle" parent="@android:style/Theme.Dialog">

        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 浮于Activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- Dialog以外的区域模糊效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- Dialog进入及退出动画 -->
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <!-- ActionSheet进出动画 -->
    <style name="DialogAnimation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/dialog_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_out</item>
    </style>

    <style name="custom_loading_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item> <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item> <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item> <!-- 无标题 -->
        <item name="android:backgroundDimEnabled">false</item> <!-- 模糊 -->
        <!-- <item name="android:windowContentOverlay">@null</item> -->
    </style>
    <!-- 自定义Dialog中button的样式 -->
    <style name="dialog_btn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:minHeight">36dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@drawable/date_selector</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- 自定义Dialog在显示时的样式 -->
    <style name="dialog_tran" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:backgroundDimAmount">0.4</item>
    </style>
    <!-- Dialog在显示时的样式 -->
    <style name="transparentFrameWindowStyle" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/mine_photo_choose_bg</item>
    </style>
    <!-- 自定义Dialog在初始化时的样式 -->
    <style name="dialog_untran" parent="dialog_tran">
        <item name="android:backgroundDimEnabled">true</item>
    </style>
    <!-- 自定义Dialog中标题的样式 -->
    <style name="DialogWindowTitle">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="tip_dialog">

        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowFullscreen">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@color/black_more_half</item>
    </style>
